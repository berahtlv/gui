# Main application layout

#:kivy 1.0

#:include kv/popups.kv

# workaround: Template can't use ids
#:set sidebar_width 60
#:set sidebar_padding 5
#:set menubar_height 30
#:set toolbar_height 33
#:set toolbar_padding 3

# color of application window
#:set colortheme (0.2, 0.2, 0.2, 1)


MainWindow:

<MainWindow>:
    orientation: 'vertical'

    Menubar:
        id: menubar
        orientation: 'horizontal'
        size_hint: 1, None
        height: menubar_height

        canvas.before:
            Color:
                rgba: colortheme
            Rectangle:
                pos: self.pos
                size: self.size

        # Here are MenubarDropDown objects

    Toolbar:
        id: toolbar
        orientation: 'horizontal'
        size_hint: 1, None
        padding: toolbar_padding
        spacing: 10
        height: toolbar_height

        canvas.before:
            Color:
                rgba: colortheme
            Rectangle:
                pos: self.pos
                size: self.size

        # Here are ToolbarIcon objects

    BoxLayout:
        orientation: 'horizontal'

        Sidebar:
            id: sidebar
            orientation: 'vertical'
            size_hint: None, 1
            padding: sidebar_padding
            spacing: sidebar_padding
            width: sidebar_width

            canvas.before:
                Color:
                    rgba: colortheme
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Here are SidebarIcon objects

        BoxLayout:
            orientation: 'vertical'

            ScrollView:
                effect_cls: 'ScrollEffect'
                bar_margin: 1
                bar_width: 10
                scroll_type: ['bars']
                scroll_distance: 20
                scroll_timeout: 200

                TopologyMap:
                    id: topomap
                    size_hint: None, None
                    size: 1280, 720

                    canvas.before:
                        Color:
                            rgb: 1, 1, 1
                        Rectangle:
                            pos: 0, 0
                            size: self.size

                    # Here are TopomapIcon and TopomapConnect objects

            Splitter:
                size_hint: 1, None
                sizable_from: 'top'
                max_size: 250
                min_size: 150
                strip_size: 7

                TabbedPanel:
                    do_default_tab: False
                    tab_height: 20
                    tab_width: 100

                    TabbedPanelItem:
                        id: basictab
                        text: 'Basic Info'

                        GridLayout:
                            cols: 2
                            rows: 2

                            Label:
                                text: 'ID'
                            TextInput:
                                multiline: False

                            Label:
                                text: 'Location'
                            TextInput:
                                multiline: False

                    TabbedPanelItem:
                        id: optiontab
                        text: 'Parameters'

                        GridLayout:
                            cols: 2
                            rows: 2

                            Label:
                                text: 'Length'
                            TextInput:
                                multiline: False

                            Label:
                                text: 'Loss'
                            TextInput:
                                multiline: False

    Statusbar:
        id: statusbar
        orientation: 'horizontal'
        size_hint: 1, None
        height: 20

        canvas.before:
            Color:
                rgba: colortheme
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Some state'

<SidebarIcon>:
    group: 'elements'
    allow_strech: True
    size_hint: None, None
    height: sidebar_width - 2 * sidebar_padding
    width: sidebar_width - 2 * sidebar_padding

<TopomapIcon>:
    id: topoicon
    allow_strech: True
    size_hint: None, None
    height: 50
    width: 50
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 30000
    drag_distance: 10

    Label:
        size: self.texture_size
        x: topoicon.x
        y: topoicon.y - 20
        color: 0, 0, 0, 1
        font_size: 13
        italic: True
        text: topoicon.el_id

        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.texture_size

<TopomapConnect>:
    size_hint: None, None

    canvas:
        Color:
            rgba: self.conn_color
        Line:
            width: 3
            points: self.conn_points

<MenubarMenu>:
    size_hint: None, 1
    width: 100
    background_normal: ''
    background_color: colortheme

<MenuButton>:
    size_hint: 1, None
    height: 20
    background_normal: ''
    background_color: 0.4, 0.4, 0.4, 1

<MenuDropDown>:
    canvas.before:
        Color:
            rgb: 0.4, 0.4, 0.4
        Rectangle:
            size: self.size
            pos: self.pos

<ToolbarIcon>:
    allow_strech: True
    size_hint: None, None
    height: toolbar_height - 2 * toolbar_padding
    width: toolbar_height - 2 * toolbar_padding
