#:kivy 1.0

# workaround: Template can't use ids
#:set sidebar_width 60
#:set sidebar_padding 5


MainWindow:

<MainWindow>:
    orientation: 'vertical'

    Menubar:
        orientation: 'horizontal'
        size_hint: 1, None
        height: 30

        Label:
            size_hint: None, 1
            width: 50
            text: 'File'

    Toolbar:
        orientation: 'horizontal'
        size_hint: 1, None
        height: 30

        Button:
            size_hint: None, 1
            width: 50
            text: 'Func'

    BoxLayout:
        orientation: 'horizontal'

        Sidebar:
            orientation: 'vertical'
            size_hint: None, 1
            padding: sidebar_padding
            spacing: sidebar_padding
            width: sidebar_width

            # Here are SidebarIcon objects

        TopologyMap:
            id: topo_map
            canvas:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

    Statusbar:
        orientation: 'horizontal'
        size_hint: 1, None
        height: 20

        Label:
            text: 'Some state'

<SidebarIcon>:
    group: 'elements'
    allow_strech: True
    size_hint: None, None
    height: sidebar_width - 2 * sidebar_padding
    width: sidebar_width - 2 * sidebar_padding
